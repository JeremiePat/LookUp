{
  "manifest_version": 2,
  "name": "LookUp",
  "version": "2.0.0",
  "default_locale": "en",

  "description": "__MSG_AddOnDescription__",

  "applications": {
    "gecko": {
      "id": "lookup@patonnier.net",
      "strict_min_version": "68.0"
    }
  },

  "icons": {
    "48": "img/icons/icon-48.png",
    "96": "img/icons/icon-96.png"
  },

  "permissions": [
    "<all_urls>",
    "tabs",
    "storage",
    "downloads"
  ],

  "background": {
    "scripts": [
      "js/vendor/browser-polyfill.js",
      "js/lib/storage.js",
      "js/background.js"
    ]
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": [
      "js/vendor/browser-polyfill.js",
      "js/inspector.js"
    ]
  }],

  "options_ui": {
    "page": "settings.html"
  },

  "browser_action": {
    "default_icon" : "img/icons/icon-48.png",
    "default_title": "LookUp",
    "default_popup": "panel.html"
  }
}
